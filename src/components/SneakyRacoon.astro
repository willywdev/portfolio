<canvas id='canvas' class='absolute bottom-0 max-h-full w-auto h-2/5'></canvas>

<script>
    import { Rive, Layout, Fit } from "@rive-app/canvas-lite";

    const canvas = document.getElementById("canvas");
    const filePath = "./rive/sneaky_raccoon.riv";

    const r = new Rive({
        src: filePath,
        canvas: canvas,
        artboard: "Main",
        autoplay: true,
        stateMachines: "State Machine 1",
        onLoad: () => {
            r.layout = new Layout({
                fit: Fit.Contain,
            });
            r.resizeDrawingSurfaceToCanvas();
        },
        shouldDisableRiveListeners: true,
    });
</script>
