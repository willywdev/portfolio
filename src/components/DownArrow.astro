---
import { Icon } from "astro-icon/components";
---

<a href='#second-section'>
    <div
        class='absolute mx-auto -translate-x-1/2 bottom-2 bg-gradient-to-b from-slate-700 to-slate-800 rounded-xl border border-slate-600 w-10 h-10 flex justify-center shadow-inner'>
        <Icon
            name='mingcute:down-fill'
            size={32}
            class='animate absolute bottom-0 opacity-90'
            color='#34d399'
        />
    </div>
</a>

<style>
    .animate {
        animation: bounce 1s infinite;
    }

    @keyframes bounce {
        0%,
        100% {
            transform: translateY(-10%);
            animation-timing-function: cubic-bezier(0.8, 0, 1, 1);
        }
        50% {
            transform: translateY(0%);
            animation-timing-function: cubic-bezier(0, 0, 0.2, 1);
        }
    }
</style>
