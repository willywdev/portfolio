---
import Portfolio from "@/layouts/Portfolio.astro";
---

<Portfolio title='WW - 404 Not Found'>
    <main class='flex flex-col items-center justify-center gap-4'>
        <h1 class='text-2xl text-center md:text-4xl'>
            Something went wrong :(
        </h1>
        <canvas id='canvas' class='flex w-screen h-auto marker:'></canvas>
    </main>
</Portfolio>

<style>
    #canvas {
        display: flex;
        width: 100dvw;
        max-width: 800px;
        height: auto;
    }
</style>

<script>
    import { Rive, Layout, Fit } from "@rive-app/canvas";

    const canvas = document.getElementById("canvas");
    const filePath = "./rive/not_found.riv";

    const r = new Rive({
        src: filePath,
        canvas: canvas,
        autoplay: true,
        stateMachines: "State Machine 1",
        onLoad: () => {
            r.layout = new Layout({
                fit: Fit.Contain,
            });
            r.resizeDrawingSurfaceToCanvas();
        },
    });
</script>
